{
	"name": "@kludge-cs/semantic-release-monorepo",
	"version": "1.0.0",
	"description": "Monorepository support for semantic-release.",
	"author": {
		"name": "Nytelife26 (Tyler J. Russell)",
		"email": "nytelife@protonmail.com",
		"url": "https://github.com/Nytelife26"
	},
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"exports": {
		"import": "./dist/index.js",
		"require": "./dist/index.js"
	},
	"private": false,
	"keywords": [
		"semantic",
		"release",
		"semantic-release",
		"typescript",
		"ts",
		"monorepo",
		"lerna",
		"packages",
		"monorepository"
	],
	"files": [
		"dist",
		"!dist/*.tsbuildinfo"
	],
	"scripts": {
		"prepare": "npm build",
		"lint": "eslint src-rewrite --ext ts --fix",
		"test": "jest",
		"test:watch": "jest --watch",
		"build": "tsc -b src",
		"clean": "tsc -b src --clean",
		"watch": "tsc -b src -w",
		"commit": "git-cz"
	},
	"license": "MIT",
	"peerDependencies": {
		"semantic-release": ">=15.11.x"
	},
	"dependencies": {
		"debug": "^3.1.0",
		"execa": "^0.8.0",
		"p-limit": "^1.2.0",
		"pkg-up": "^2.0.0",
		"ramda": "^0.25.0",
		"read-pkg": "^3.0.0",
		"semantic-release-plugin-decorators": "^3.0.0"
	},
	"devDependencies": {
		"@commitlint/cli": "^11.0.0",
		"@commitlint/config-conventional": "^11.0.0",
		"@kludge-cs/eslint-config-js": "^1.0.1",
		"@kludge-cs/eslint-config-ts": "^1.0.2",
		"@kludge-cs/ts-build-config": "^1.0.0",
		"@types/jest": "^26.0.20",
		"@types/node": "^14.14.21",
		"@types/semantic-release": "^17.2.0",
		"@typescript-eslint/eslint-plugin": "^4.14.0",
		"@typescript-eslint/parser": "^4.14.0",
		"cz-conventional-changelog": "^3.3.0",
		"eslint": "^7.18.0",
		"eslint-plugin-json": "^2.1.2",
		"husky": "^4.3.8",
		"jest": "^26.6.3",
		"jest-circus": "^26.6.3",
		"lint-staged": "^10.5.3",
		"semantic-release": "^17.0.2",
		"semantic-release-github-pr": "^6.0.0",
		"ts-jest": "^26.4.4",
		"ts-node": "^9.1.1",
		"typescript": "^4.1.3"
	},
	"bugs": {
		"url": "https://github.com/kludge-cs/semantic-release-monorepo/issues"
	},
	"homepage": "https://github.com/kludge-cs/semantic-release-monorepo#readme",
	"husky": {
		"hooks": {
			"commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*\\.(js|ts)": "eslint --ext js,ts --fix"
	}
}
